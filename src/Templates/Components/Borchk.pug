div#borchk
  form(action=identityProviders.borchk.action autocomplete='off' method='post')
    div.form-group
      if lockedAgency
        label(for='libraryid-input') Bibliotek
        input(type="hidden" value=lockedAgency name="libraryId" id="libraryid-input" aria-hidden='true' )
        input(type="text" disabled value=lockedAgencyName class="form-control" id="libraryid-input-disabled" name="libraryName" aria-hidden='false' aria-disabled='true')
      else
        label(for='libraryid-input') Bibliotek
        div.input-group
          input(type='text' class='form-control' id='libraryname-input' name='libraryName' placeholder='Vælg bibliotek' required='true' value=preselctedName)
          input(type="hidden" name="libraryId" id="libraryid-input-hidden" aria-hidden='true' value=preselectedId )
          div.input-group-btn.black
            button.btn.inline-btn-default.dropdown-toggle(type='button' class=preselctedName ? 'hide' : '' id='libraries-dropdown-toggle-btn' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' onclick='toggleDropdown()' aria-hidden='false')
              span(class='glyphicon glyphicon-triangle-bottom')
            button.btn.inline-btn-default(type='button' class=preselctedName ? '' : 'hide' id='clear-libraries-input-btn' onclick='clearLibraryInput();' aria-hidden='true')
              span(class='glyphicon glyphicon-remove')
        if branches
          div(class='dropdown' id='libraries-dropdown-container' aria-hidden='true')
            ul(class='dropdown-menu libraries-dropdown' id='libraries-dropdown')
              li(class='dropdown-header hide' id='latest') Forslag
              li(class='dropdown-header hide' id='alphabetical') Alfabetisk
              each branch in branches
                li
                  a(class='agency' data-aid=branch.branchId data-name=branch.name onclick='OnClick(this);') #{branch.name}
                    span.hide #{branch.branchId}

    div.form-group
      label(for='userid-input') CPR eller lånerkortnummer
      div.input-group
        input(type="text" value="" class="form-control" id="autocomplete-username" name="autocomplete-username" aria-hidden='true' aria-disabled='false' style="position:absolute; top: -1000px" autocomplete="username")
        input(type='password' class='form-control' id='userid-input' name='userId' pattern='[0-9]*' required='true' autocomplete="password")
        div.input-group-btn
          button(type='button' class='btn inline-btn-default' id='toggle-userid-input' onclick='toggleUserIdVisibility("userid-input", "userid-input-glyph");')
            span(class='icon-btn icon-eye-closed' id='userid-input-glyph')

    div.form-group
      label(for='pin-input') Pinkode
      div.input-group
        input(type='password' class='form-control' id='pin-input' name='pincode' pattern='[0-9]*' required='true' autocomplete="new-pincode")
        div.input-group-btn
          button(type='button' class='btn inline-btn-default' id='toggle-pin-input' onclick='toggleUserIdVisibility("pin-input", "pin-input-glyph");')
            span(class='icon-btn icon-eye-closed' id='pin-input-glyph')

    div.login-actions.col-xs-12.col-md-12
      div.remember-me-container.col-xs-6.col-md-6
        label.remember(for='rememberMe')
          input(type='checkbox' name='rememberMe' id='rememberMe')
          span Husk mig
      div.login-buttons-container.col-xs-6.col-md-6
        div
          button(type='submit' class='btn btn-success' id='borchk-submit') Log ind
        div.buffer-top-10
          a(href=identityProviders.borchk.abortAction class='link-style' id="cancel-login") Fortryd log ind
