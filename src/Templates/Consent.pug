extends Main

block append content
  if consentFailed
    div
      span.consent-rejected-img
    div
      div.h3
        strong Adgang ikke godkendt
      div.buffer-1-1
        strong #{serviceName} har ikke fået adgang til de ønskede oplysninger
      div.buffer-1-1
        strong Derfor er du ikke blevet logget ind
    div &nbsp;
    if returnUrl
      div.buffer-vertical-5
        a(class="link-style" href=returnUrl) Tilbage til #{serviceName}
  else
    div
      span.consent-img
    div
      div.h3
        strong Godkendelse
      div.buffer-1-1
        strong.italic #{serviceName}
        strong  beder om adgang til disse oplysninger
      ul.attribute
        each attribute in attributes
          li.attribute(data-toggle="collapse" href="#collapse-" + attribute.name aria-expanded="false" aria-controls="collapseExample") #{attribute.name}
            a.right-text
              span(class="glyphicon glyphicon-info-sign" aria-hidden="true")
          div.collapse(class="italic indent" id="collapse-" + attribute.name) #{attribute.description}
        li.attribute

      div.buffer-vertical-10
        form(action=consentAction method='post')
          a(href=consentAction class='buffer-right-20 link-style')
            strong Godkend ikke
          button(type='submit' name='userconsent' value='1' class='btn btn-success' id='consent-submit')
            strong GODKEND

  div &nbsp;
